<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="150dp"
    android:id="@+id/home_item_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/home_item_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/app_bar_image"
            android:scaleType="centerCrop"
            android:src="@drawable/ani_dog_one"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dummy"
            android:textSize="12sp"
            android:id="@+id/home_item_line1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dummy"
            android:textSize="10sp"
            android:id="@+id/home_item_line2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dummy"
            android:textSize="8sp"
            android:id="@+id/home_item_line3"/>
    </LinearLayout>
</LinearLayout>
